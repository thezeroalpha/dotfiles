# headers
s/^\* \(.*\)/= \1 =/
s/^\*\{2\} \(.*\)/== \1 ==/
s/^\*\{3\} \(.*\)/=== \1 ===/
s/^\*\{4\} \(.*\)/==== \1 ====/
s/^\*\{5\} \(.*\)/====== \1 =====/
s/^\*\{6\} \(.*\)/====== \1 =====/
# links
s/\[\[\(http[^]]*\)\]\[\([^]]*\)\]\]/[[\1|\2]]/g
# files/images
s/\[\[\([^]]*\)\]\[\([^]]+\)\]\]/{{local:\1|\2}}/g
s/\[\[\([^]|]*\)\]\]/{{local:\1}}/g
# code
s/#\+BEGIN_SRC \(.*\)/{{{class="code \1"/
s/#\+END_SRC/}}}/
# math
s/^ *\(.*\\[a-zA-Z].*\)/$\1$/
